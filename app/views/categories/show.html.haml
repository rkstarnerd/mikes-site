/ Page Content
.container
  / Page Heading/Breadcrumbs
  .row
    .col-lg-12
      %h1.page-header
        = @category.name
      %ol.breadcrumb
        %li
          %a{:href => root_path} Home
        %li.active
          = @category.name
  / /.row
  - @category.paintings.each do |painting|
    - if (@category.paintings.index(painting) + 1) % 4 == 0
      .row
        .col-md-3.img-portfolio
          %center
            %a{:href => "#{painting_path(painting.id)}"}
              %img.img-responsive.img-hover.thumbnail{:src => painting.small_img_url}
              %a{:href => "#{painting_path(painting.id)}"}
                %h4 #{painting.title}
    - else
      .col-md-3.img-portfolio
        %center
          %a{:href => "#{painting_path(painting.id)}"}
            %img.img-responsive.img-hover.thumbnail{:src => painting.small_img_url}
            %a{:href => "#{painting_path(painting.id)}"}
              %h4 #{painting.title}
  / /.row
  %hr