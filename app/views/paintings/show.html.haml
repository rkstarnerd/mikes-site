/ Page Content
.container
  / Page Heading/Breadcrumbs
  .row
    .col-lg-12
      %h1.page-header
        = @painting.title
      %ol.breadcrumb
        %li
          %a{:href => root_path} Home
        %li
          %a{:href => category_path(@painting.category.id)} #{@painting.category.name}
        %li.active #{@painting.title}
  / /.row
  / Portfolio Item Row
  .row
    .col-md-8
      %center
        %img#zoom_mw{ :src => "#{@painting.large_img_url}", data-zoom-image="@painting.magnified_img_url"}
    .col-md-4
      %h3 #{@painting.artist}
      %ul
        %li #{@painting.title}
        %li #{@painting.medium} on #{@painting.surface}
        - if !@painting.height.blank?
          %li Height: #{@painting.height}, Width: #{@painting.width} inches
        - else
          %li Sizes vary
  / /.row
  / Related Projects Row
  .row
    .col-lg-12
      %h3.page-header
        #{@painting.category.name}
        %small (related paintings)
    - @related_paintings.each do |painting|
      .col-sm-3.col-xs-6
        %center
          %a{:href => "#{painting_path(painting.id)}"}
            %img.img-responsive.img-hover.img-related.thumbnail{:alt => "", :src => painting.small_img_url}
            = painting.title
