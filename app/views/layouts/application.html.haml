!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{:content => "Artist, Michael Dixon's, portfolio", :name => "description"}
    %meta{:content => "", :name => "author"}
    = include_jquery
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"}
    = javascript_include_tag "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"
    = javascript_include_tag "https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"
    %link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css", :rel => "stylesheet"}

    = csrf_meta_tags
    %title Michael Dixon - Artist
    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
  %body
    / Navigation
    %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => root_path } Michael Dixon
        / Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => "#{statements_path}"} Artist Statements
            %li
              %a{:href => "#{reviews_path}"} Reviews
            %li
              %a{:href => "#{cv_path}"} CV
            %li
              %a{:href => "#{contact_path}"} Contact
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Links
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "http://www.jackmeiergallery.com/", :target => "_blank"} Jack Meier Gallery
                %li
                  %a{:href => "http://www.barrettart.com/", :target => "_blank"} Peter Barrett
                %li
                  %a{:href => "http://matthewchoberka.com/", :target => "_blank"} Matthew Choberka
                %li
                  %a{:href => "http://www.frednocella.com/", :target => "_blank"} Fred Nocella
                %li
                  %a{:href => "http://nicholasknight.net/", :target => "_blank"} Nicholas Knight
                %li
                  %a{:href => "http://sarahsands.com/blog/", :target => "_blank"} Sarah Sands
                %li.disabled
                  %a{:href => "http://www.perryrubenstein.com/artists/santiago-cucullu/", :target => "_blank"} Santiago Cucullu
                %li.disabled
                  %a{:href => "http://www.chorographics.com/", :target => "_blank"} Tom Allnutt, GIS
                %li
                  %a{:href => "http://picasaweb.google.com/tom.allnutt", :target => "_blank"} Tom Allnutt, photography
                %li
                  %a{:href => "http://www.flickr.com/photos/kdixon/", :target => "_blank"} Kate Dixon, photography
            %li
              %a{:href => "#{signin_path}"} Sign in
  = yield
